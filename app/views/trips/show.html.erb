<div class="container mx-auto px-4 py-8">
  <%# --- ヘッダー --- %>
    <div class="bg-white shadow-lg rounded-lg p-6 sm:p-8 mb-8">
        <div class="flex flex-col sm:flex-row justify-between items-start gap-4">
        <div>
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-800"><%= @trip.title %></h1>
            <p class="text-md sm:text-lg text-gray-500 mt-2">
            <%= @trip.start_date&.strftime('%Y年%m月%d日') %> ~ <%= @trip.end_date&.strftime('%Y年%m月%d日') %>
            </p>
        </div>
        <span class="px-4 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 whitespace-nowrap mt-2 sm:mt-0">
            <%= @trip.trip_type %>
        </span>
        </div>
    </div>

    <%# --- 地図コンテナを追加 --- %>
    <div class="bg-white shadow-lg rounded-lg mb-8" 
        data-controller="map" 
        data-map-url-value="<%= map_data_trip_path(@trip) %>">
        <h2 class="text-2xl font-bold text-gray-700 p-6 border-b">旅のルート</h2>
        <div data-map-target="container" style="height: 400px;"></div>
    </div>


    <%# --- 旅程 --- %>
    <div class="space-y-6">
        <h2 class="text-2xl font-bold text-gray-700">旅程詳細</h2>
        
        <% if @legs_by_segment.empty? %>
        <div class="bg-white p-6 rounded-lg shadow-md text-center text-gray-500">
            まだ旅程が登録されていません。
        </div>
        <% else %>
        <%# --- 行程(segment)ごとにループ --- %>
        <% @legs_by_segment.each do |segment, legs_in_segment| %>
            <%# --- 親要素（クリックで開閉） --- %>
            <div class="bg-white rounded-lg shadow-md" data-controller="collapsible">
            <div class="p-4 sm:p-6 flex justify-between items-center cursor-pointer hover:bg-gray-50 transition-colors" data-action="click->collapsible#toggle">
                <div>
                <p class="text-sm text-gray-500"><%= segment %></p>
                <h3 class="text-lg font-semibold text-gray-800">
                    <%= legs_in_segment.first.origin_spot.name %> → <%= legs_in_segment.last.destination_spot.name %>
                </h3>
                </div>
                <%# --- アイコンを小さく、シンプルに --- %>
                <svg data-collapsible-target="icon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
            </div>
            
            <%# --- 詳細部分（最初は非表示） --- %>
            <div data-collapsible-target="content" class="hidden border-t border-gray-200">
                <table class="min-w-full table-auto">
                <tbody class="divide-y divide-gray-100">
                    <% legs_in_segment.each do |leg| %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                        <div class="flex items-center">
                            <span class="font-mono text-xs text-gray-400 mr-4"><%= leg.departure_time&.strftime('%H:%M') %></span>
                            <span><%= leg.origin_spot.name %></span>
                        </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <div class="flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                            <span><%= leg.transportation.name %></span>
                        </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                        <div class="flex items-center">
                            <span class="font-mono text-xs text-gray-400 mr-4"><%= leg.arrival_time&.strftime('%H:%M') %></span>
                            <% if leg.destination_spot.spot_type == 'waypoint' %>
                            <span class="text-gray-500"><%= leg.destination_spot.name %> (経由)</span>
                            <% else %>
                            <span class="font-semibold"><%= leg.destination_spot.name %></span>
                            <% end %>
                        </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
            </div>
            </div>
        <% end %>
        <% end %>
    </div>

    <div class="mt-8">
        <%= link_to '一覧に戻る', trips_path, class: "text-blue-500 hover:text-blue-800" %>
    </div>
</div>
